<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
   android:id="@+id/yst_layout_foot1"
   android:layout_width="fill_parent"
   android:layout_height="50dp"
    android:background="#F7F7F7"  >  
	<!-- foot --> 
	<RelativeLayout 
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:layout_marginBottom="15dp"
        android:background="@color/yst_line" 
	/> 
	<TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"           
         
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"   
		android:layout_gravity="left|center"  
		android:layout_marginLeft="10dp"
		
		android:singleLine="true"		
		android:ellipsize="end"
		android:textColor="@color/yst_gray" 
		android:textSize="@dimen/user_info_dtl_top"
		android:text="@string/yst_faq_dtltip"   
	/> 
	<Button
        android:id="@+id/yst_btn_yes" 
        android:layout_width="50dp"
        android:layout_height="30dp"           
         
        android:layout_marginRight="70dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"   
		android:layout_gravity="right|center"  
		android:gravity="center" 
		android:singleLine="true"		
		android:ellipsize="end"
		android:textColor="@color/yst_blue" 
		android:textSize="13sp"
		android:text="@string/yst_yes"   
		android:background="@drawable/yst_btn_yesno"
	/> 
	<Button
        android:id="@+id/yst_btn_no" 
        android:layout_width="50dp"
        android:layout_height="30dp"           
         
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"   
		android:layout_gravity="right|center"  
		android:gravity="center" 
		android:layout_marginRight="10dp"
		
		android:singleLine="true"		
		android:ellipsize="end"
		android:textColor="@color/yst_gray" 
		android:textSize="13sp"
		android:text="@string/yst_no"   
		android:background="@drawable/yst_btn_noyes"
	/>  
     
</RelativeLayout>
