<?xml version="1.0" encoding="UTF-8"?>
<!-- http://www.eoeandroid.com/thread-1081-1-1.html -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" 
    android:id="@+id/layout_work_list_footer"
	android:layout_width="fill_parent" 
	android:orientation="vertical"
	android:layout_height="45dip" 
    android:background="@color/yst_full_bg">
	<LinearLayout 
		android:layout_width="fill_parent" 
		android:orientation="horizontal"
		android:layout_height="1dip"
    	android:background="@color/yst_line"
    	android:visibility="gone"
		/>
	<LinearLayout 
		android:layout_width="fill_parent" 
		android:orientation="horizontal"
		android:layout_height="0.3dip"
    	android:background="@color/yst_line"
		/>
	<LinearLayout 
		android:layout_width="fill_parent" 
		android:orientation="horizontal"
		android:layout_height="fill_parent"
    	android:background="@color/yst_white" >
		  
	    <!-- 11 -->
	    <TextView  
		    android:layout_height="20dip"
		    android:layout_width="wrap_content" 
		    
			android:layout_gravity="left|center"
			android:gravity="center"
	        android:layout_marginLeft="1dip" 
	        
		    android:text="@string/worklist_pingfen"
		    android:textSize="15sp"
		    android:textColor="@color/yst_gray"  
		/> 
		
	    <!-- =============== start ============ -->
	    <ImageView  
	        android:id="@+id/iv_star_1"
		    android:layout_height="20dip"
		    android:layout_width="33dip" 
		     
			android:layout_gravity="left|center"
			android:gravity="center"
	        android:layout_marginLeft="1dip"  
		    android:src="@drawable/yst_star_gray"
		    
		/>  
	    <ImageView  
	        android:id="@+id/iv_star_2"
		    android:layout_height="20dip"
		    android:layout_width="33dip" 
		     
			android:layout_gravity="left|center"
			android:gravity="center"
	        android:layout_marginLeft="1dip"  
		    android:src="@drawable/yst_star_gray"
		    
		/>  
	    <ImageView  
	        android:id="@+id/iv_star_3"
		    android:layout_height="20dip"
		    android:layout_width="33dip" 
		     
			android:layout_gravity="left|center"
			android:gravity="center"
	        android:layout_marginLeft="1dip"  
		    android:src="@drawable/yst_star_gray"
		    
		/>  
	    <ImageView  
	        android:id="@+id/iv_star_4"
		    android:layout_height="20dip"
		    android:layout_width="33dip" 
		     
			android:layout_gravity="left|center"
			android:gravity="center"
	        android:layout_marginLeft="1dip"  
		    android:src="@drawable/yst_star_gray"
		    
		/>  
	    <ImageView  
	        android:id="@+id/iv_star_5"
		    android:layout_height="20dip"
		    android:layout_width="33dip" 
		     
			android:layout_gravity="left|center"
			android:gravity="center"
	        android:layout_marginLeft="1dip"  
		    android:src="@drawable/yst_star_gray"
		    
		/>   
		
	    <!-- 99 -->
	    <TextView  
	        android:id="@+id/btn_save"
		    android:layout_height="35dip"
		    android:layout_width="60dp" 
		    
			android:layout_gravity="left|center"
			android:gravity="center"
	        android:layout_marginLeft="11dip" 
	        
		    android:text="@string/yst_save"
		    android:textSize="15sp"
		    android:textColor="@color/yst_gray"  
		    android:background="@drawable/yst_btn_noyes"
		    
		/>  
		
	</LinearLayout>  
</LinearLayout>