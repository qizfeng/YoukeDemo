<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"  
	android:id="@+id/yst_layout_list_item" 
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
	android:orientation="vertical"    
	android:background="@drawable/yst_serviceuser_bg"
    >
       
	<!-- top -->
    <RelativeLayout 
        android:id="@+id/yst_layout_top"
        android:layout_width="fill_parent"
        android:layout_height="48dip"
        android:layout_alignParentTop="true"
        >
        <include layout="@layout/yst_bar_title_return"/> 
    </RelativeLayout> 
    
	<!-- center -->   
    <LinearLayout
        android:layout_width="fill_parent"
    	android:layout_height="fill_parent"
		android:orientation="vertical" >
		
	    <include layout="@layout/yst_include_tips_user"/>
	    <Button
			android:id="@+id/yst_btn_chatto"
	        android:layout_width="fill_parent"
	        android:layout_height="33dip"
			android:layout_marginTop="@dimen/user_info_dtl_btn" 
			android:layout_marginLeft="10dip"
			android:layout_marginRight="10dip"
			android:gravity="center"  
	        android:text="继续和TA沟通"  
		    android:textSize="15dp"
		    android:textColor="@color/yst_white" 
			android:background="@drawable/yst_btn"
	        />   
	    <Button  
			android:id="@+id/yst_btn_seloth"
	        android:layout_width="fill_parent"
	        android:layout_height="33dip"
			android:layout_marginTop="5dp"
			android:layout_marginBottom="@dimen/user_info_dtl_btn" 
			android:layout_marginLeft="10dip"
			android:layout_marginRight="10dip"
			android:gravity="center"  
	        android:text="选新客服"  
		    android:textSize="15dp"
		    android:textColor="@color/yst_blue" 
			android:background="@drawable/yst_btn_rect"
	        />   
		    
       	  
 	</LinearLayout>  
</LinearLayout>

