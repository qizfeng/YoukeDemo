<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"  
    android:layout_width="fill_parent"
    android:layout_height="30dip"  
    android:paddingRight="10dp"
    >
    
    <TextView
	    android:id="@+id/yst_txt_remark"
        android:layout_width="wrap_content"  
        android:layout_height="fill_parent" 
    	
		android:layout_gravity="left|center"
		android:gravity="left|center"  
		android:layout_marginRight="30dip"
        android:text="山东海化阿斯多夫山东海化阿斯多夫山东海化阿斯多夫山东海化阿斯多夫山东海化阿斯多夫"  
	    android:textSize="13sp"
	    android:textColor="@color/yst_gray"
	    android:singleLine="true" 
	    android:maxLines="1" 
		android:ellipsize="end"
	    android:layout_alignParentLeft="true"  
        />           
  	  
    <TextView
	    android:id="@+id/yst_txt_num"
        android:layout_width="22dip"  
        android:layout_height="22dip" 
    
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
		android:gravity="center"  
	    android:text="3"  
	    android:textSize="12dp"
	    android:textColor="@color/yst_white"
	    android:background="@drawable/yst_dot_red"
	    android:layout_alignParentRight="true"  
        />         
  	 
</RelativeLayout>

