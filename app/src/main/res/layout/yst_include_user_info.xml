<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"  
	android:id="@+id/yst_layout_list_item" 
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
	android:orientation="horizontal"    
    >
     
	<ImageView  
	    android:id="@+id/yst_img_user"
	    android:layout_width="68dip"  
	    android:layout_height="68dip"   
	    
		android:layout_gravity="center"
		android:gravity="center"  
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
	   	android:layout_marginLeft="15dip"
	    android:layout_alignParentLeft="true"
	    android:src="@drawable/yst_def_userimg"
	    />	
	      
	<LinearLayout  
        android:id="@+id/yst_layout_right"
	    android:layout_width="wrap_content"  
	    android:layout_height="wrap_content"  	    
	    android:orientation="vertical" 
		    
		android:layout_marginTop="22dip"
		android:layout_marginBottom="22dip"
		android:layout_gravity="center"
		android:gravity="center"  
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true" 
	   	android:layout_marginLeft="13dip"
	   	android:layout_marginRight="13dip" 
	    android:layout_toRightOf="@id/yst_img_user"
	    >	
	    <TextView
		    android:id="@+id/yst_txt_name"
	        android:layout_width="wrap_content"  
	        android:layout_height="fill_parent" 
	    	
			android:layout_gravity="left|center"
			android:gravity="left|center"  
	        android:text="开心"  
		    android:textSize="18dp"
		    android:textColor="@color/yst_black"
		    android:layout_alignParentLeft="true"  
	        />   
	    <TextView
		    android:id="@+id/yst_txt_job"
	        android:layout_width="wrap_content"  
	        android:layout_height="fill_parent" 
	    	
			android:layout_gravity="left|center"
			android:gravity="left|center"  
			android:layout_marginTop="6dip"
			android:layout_marginRight="30dip"
	        android:text="客服经理"  
		    android:textSize="14dp"
		    android:textColor="@color/yst_gray"
		    android:singleLine="true" 
		    android:maxLines="1" 
			android:ellipsize="end"
		    android:layout_alignParentLeft="true"  
	        />  
	</LinearLayout>    
</LinearLayout>

