<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"  
    android:layout_width="fill_parent"
    android:layout_height="30dip"  
    >
    
    <TextView
	    android:id="@+id/yst_txt_name"
        android:layout_width="wrap_content"  
        android:layout_height="fill_parent" 
    	
		android:layout_gravity="center"
		android:gravity="left|center"  
	    android:layout_marginRight="3dip"
	    
        android:text="开心"  
	    android:textSize="18dp"
	    android:textColor="@color/yst_black"
	    android:singleLine="true" 
	    android:maxLines="1" 
		android:ellipsize="end"
	    android:layout_alignParentLeft="true"  
        />    
    <TextView
	    android:id="@+id/yst_txt_job"
        android:layout_width="wrap_content"  
        android:layout_height="fill_parent" 
    
		android:layout_gravity="center"
		android:gravity="center"  
        android:layout_marginLeft="1dip"
        android:layout_marginRight="30dip"
        android:text="经理"  
	    android:textSize="13dp"
	    android:textColor="#208FD9"  
	    android:layout_toRightOf="@id/yst_txt_name"
        />      
    <TextView
	    android:id="@+id/yst_txt_status"
        android:layout_width="wrap_content"  
        android:layout_height="wrap_content" 
    
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
	    android:layout_alignParentRight="true"  
	    android:gravity="left|center"
	    android:paddingLeft="20dp"
	    android:layout_marginRight="0dp"
        android:text="在线"  
	    android:textSize="11dp"
	    android:textColor="@color/yst_white"  
	    android:background="@drawable/yst_online_bg_on"
        />         
  	 
</RelativeLayout>

