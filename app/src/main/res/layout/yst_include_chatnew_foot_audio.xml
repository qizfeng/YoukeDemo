<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"  
	android:paddingTop="3dip" 
	android:paddingBottom="3dip"  
	android:id="@+id/yst_layout_audio"
	android:background="@color/yst_white"
   > 
    <ImageView   
	    android:id="@+id/yk_btn_key_audio"
	    android:layout_width="31dip" 
	    android:layout_height="31dip" 	 
	    
       	android:layout_alignParentLeft="true"    
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"   
		android:gravity="center"  
		android:layout_marginLeft="6dip" 
		android:layout_marginRight="6dip" 
		 
	    android:src="@drawable/yst_chatnew_iv_boardkey"
	    /> 
    <ImageView   
	    android:id="@+id/yk_btn_more_audio"
	    android:layout_width="31dip" 
	    android:layout_height="31dip" 	 
	    
       	android:layout_alignParentRight="true"    
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"   
		android:gravity="center"  
		android:layout_marginTop="12dip" 
		android:layout_marginLeft="6dip" 
		android:layout_marginRight="11dip" 
		 
	    android:src="@drawable/yst_chatnew_iv_more" 
	    /> 
    <TextView   
	    android:id="@+id/btn_audio_center" 
	    android:layout_width="fill_parent" 
	    android:layout_height="35dip" 	  
	       
		android:layout_toLeftOf="@id/yk_btn_more_audio"  
		android:layout_toRightOf="@id/yk_btn_key_audio"   
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"    
		android:gravity="center"  
		android:paddingTop="3dip"
		android:paddingBottom="3dip"
		
		android:layout_marginLeft="6dip" 
		android:layout_marginRight="6dip" 
		android:textColor="@color/yst_gray" 
		android:textSize="20sp"
	    android:text="按住  说话"  
	    android:background="@drawable/yst_audio_pressed_bg"
	    />  
			
</RelativeLayout>  
  	