<?xml version="1.0" encoding="utf-8"?>
<!-- 
    正在浏览  yst_layout_right_2
-->
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"  
    android:id="@+id/yst_layout_right_2"
    android:layout_width="220dp"
    android:layout_height="wrap_content"
	android:orientation="vertical"    
	android:layout_gravity="right"
	android:paddingLeft="15dp"
	android:paddingRight="15dp"
	android:paddingTop="8dp"
	android:paddingBottom="8dp"
	android:layout_marginLeft="33dip" 
	android:background="@drawable/yst_chat_iv_chat_right9" 
    >
    <TextView   
        android:layout_width="wrap_content"  
        android:layout_height="wrap_content"  
	    android:layout_marginTop="5dip"
	    android:layout_marginBottom="5dip" 
		android:gravity="left|center"
        android:text="正在浏览"  
	    android:textSize="13sp"
		android:textColor="@color/yst_white"  
	    />
    
  	<LinearLayout  
	    android:layout_width="fill_parent"  
	    android:layout_height="wrap_content"  
	    android:orientation="horizontal"   
	    >	
	<!-- 		      图片     -->
	    <ImageView
            android:id="@+id/iv_goods_img_r"  
            android:layout_width="55dip"
            android:layout_height="55dip" 
            
		    android:layout_gravity="right"  
	        android:layout_centerVertical="true"
        	android:layout_marginRight="6dip" 
            
            android:src="@drawable/yst_def_img" 
            android:scaleType="centerInside"
            android:adjustViewBounds="true" 
            />  
	<!-- 		     商品信息，价格     -->
	    <LinearLayout  
	        android:id="@+id/yst_layout_right_child"
		    android:layout_width="wrap_content"  
		    android:layout_height="wrap_content"  
		    android:orientation="vertical"  
		    >      
		    <TextView  
			    android:id="@+id/txt_goods_title_r"
		        android:layout_width="wrap_content"  
		        android:layout_height="23dp"   
		        android:gravity="left|center"
		        
		        android:text="商品:xxx"  
			    android:textSize="13sp"
			    android:textColor="@color/yst_white"  
			    android:singleLine="true" 
			    android:maxLines="1" 
				android:ellipsize="end"
			    /> 
		    <TextView   
			    android:id="@+id/txt_goods_price_r"
		        android:layout_width="wrap_content"  
		        android:layout_height="23dp"   
		        android:gravity="left|center"
		        
		        android:text="$122"  
			    android:textSize="13sp"
			    android:textColor="@color/yst_white"  
			    /> 
		</LinearLayout>         
 	</LinearLayout>  
      
</LinearLayout>

